#: import get_color_from_hex kivy.utils.get_color_from_hex

<HomeScreen>

    MDRelativeLayout:
        id: imaage_bg_box
        md_bg_color: get_color_from_hex("#FFF2E8")
        size_hint_y: .45
        pos_hint: {"top": 1}
        
        Image:
            source: "assets/images/images.jpg"
            size_hint: None, None
            size: self.parent.width , self.parent.height
            allow_stretch: True
            keep_ratio: False
        
        Label:
            text: "STAR MUM SUPPORT"
            color: get_color_from_hex("#109CAC")
            font_size: 20
            bold: True
            x: -dp(50)
            
    
